{
    "appId": "com.writenow.app",
    "productName": "WriteNow",
    "directories": {
        "output": "release"
    },
    "files": [
        "dist/**/*",
        "electron/**/*"
    ],
    "win": {
        "target": [
            {
                "target": "dir",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "public/icon.ico",
        "signAndEditExecutable": false
    },
    "asar": true,
    "asarUnpack": [
        "**/*.node",
        "**/*.dll"
    ]
}
