{
    "appId": "com.writenow.app",
    "productName": "WriteNow",
    "directories": {
        "output": "release"
    },
    "publish": [
        {
            "provider": "github",
            "owner": "Leeky1017",
            "repo": "WN0.1"
        }
    ],
    "files": [
        "dist/**/*",
        "electron/**/*"
    ],
    "win": {
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64"
                ]
            },
            {
                "target": "zip",
                "arch": [
                    "x64"
                ]
            }
        ],
        "icon": "public/icon.ico",
        "signAndEditExecutable": false
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true
    },
    "asar": true,
    "asarUnpack": [
        "**/*.node",
        "**/*.dll"
    ]
}
