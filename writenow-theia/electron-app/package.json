{
  "private": true,
  "name": "electron-app",
  "version": "0.0.0",
  "main": "lib/backend/electron-main.js",
  "dependencies": {
    "@theia/core": "1.67.0",
    "@theia/editor": "1.67.0",
    "@theia/electron": "1.67.0",
    "@theia/filesystem": "1.67.0",
    "@theia/messages": "1.67.0",
    "@theia/monaco": "1.67.0",
    "@theia/navigator": "1.67.0",
    "@theia/preferences": "1.67.0",
    "@theia/workspace": "1.67.0",
    "writenow-core": "0.0.0",
    "@theia/search-in-workspace": "1.67.0"
  },
  "devDependencies": {
    "@theia/cli": "1.67.0",
    "electron": "38.4.0"
  },
  "scripts": {
    "bundle": "yarn rebuild && theia build --mode development",
    "rebuild": "theia rebuild:electron --cacheRoot .. --modules=native-keymap,better-sqlite3",
    "start": "theia start",
    "watch": "yarn rebuild && theia build --watch --mode development"
  },
  "theia": {
    "target": "electron",
    "frontend": {
      "config": {
        "applicationName": "WriteNow",
        "defaultTheme": "dark",
        "electron": {
          "windowOptions": {
            "icon": "../resources/icon-256.png"
          }
        },
        "preferences": {}
      }
    }
  },
  "productName": "WriteNow"
}
